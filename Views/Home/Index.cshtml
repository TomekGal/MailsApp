@model IEnumerable<MailsApp.Models.Domains.Mail>


@{
    ViewBag.Title = "Poczta";

}
<link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">


@if (Model != null && Model.Any())
{
    @Html.AntiForgeryToken()
    <div class="container">


        <div class="col-md-12">
            <h2 class="grid-title text-center">@ViewBag.Heading</h2>
            <div class="row">

                <div class="col-md-3 ">

                    <hr>

                    <div class="h4">
                        <ul class=" nav-flex-column list-unstyled ">
                            <li class="header text-center h3 mb-3">Folders</li>

                            <li class=""><a href="@Url.Action("Index","Home", new {statusId=1})" class="text-decoration-none text-secondary "><i class="fa fa-inbox m-2"></i> Inbox</a></li>
                            <li class=""><a href="@Url.Action("Index","Home", new {statusId=2})" class="text-decoration-none text-secondary "><i class="fa fa-paper-plane m-2"></i>Sent</a></li>
                            <li class=""><a href="@Url.Action("Index","Home", new {statusId=3})" class="text-decoration-none text-secondary "><i class="fa fa-pencil-square-o m-2"></i> Draft</a></li>
                            <li class=""><a href="@Url.Action("Index","Home", new {statusId=4})" class="text-decoration-none text-secondary "><i class="fa fa-folder m-2"></i> Spam</a></li>
                            <li class=""><a href="@Url.Action("Index","Home", new {statusId=5})" class="text-decoration-none text-secondary "><i class="fa fa-trash m-2"></i> Bin</a></li>

                        </ul>
                    </div>
                    <div>
                        <button class="btn btn-block btn-primary" onclick='window.location.href="@Url.Action("MailNew","Home")"'><i class="fa fa-pencil"></i>&nbsp; NOWA WIADOMOŚĆ </button>

                    </div>

                </div>

                @Html.Partial("_ViewMails")


            </div>

        </div>
    </div>

}
else
{
    <div> Brak poczty do wyświetlenia</div>

}


